pkg load miscellaneous;

%global wavPath = '/home/hestia/recorded.wav';
global wavPath = '/home/pavel/recorded.wav';

% specific channel number or -1 = all channels in input
global channel = 2;

# no charts
global showCharts = false;

% directory for calibration and cmd files - must be writable by current user, files will be generated by calibrate.m
global dataDir = 'data';


% 5th order distortion polynomial
global distortPol = [0, 0, 0, 0, chebyshevpoly(1, 1)] ...
  + db2mag(-110) * [0, 0, 0, chebyshevpoly(1, 2)] ...
  + db2mag(-110) * [0, 0, chebyshevpoly(1, 3)] ...
  + db2mag(-110) * [0, chebyshevpoly(1, 4)] ...
  + db2mag(-110) * [chebyshevpoly(1, 5)];

% configuration of audio interface
global playRecConfig = struct();
playRecConfig.recDeviceID = 0;
playRecConfig.sampleRate = 48000;
playRecConfig.chanList = [1 2];
playRecConfig.pageBufCount = 5;
playRecConfig.playDeviceID = 16; % e.g. Loopback 0
playRecConfig.playChanList = [1 2];
playRecConfig.otherDirectionDeviceID = 8;


global showFFTFigureConfig = struct();
showFFTFigureConfig.numAvg = 0;
showFFTFigureConfig.restartAvg = 0;
showFFTFigureConfig.fftSize = 2^17;
